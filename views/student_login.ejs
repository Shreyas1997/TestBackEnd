<body>
    <% var data, dataSuccess %>
    <% if(data != null) {%>
    <div class="alert alert-success" role="alert">
        <strong>Thank You!</strong> You successfully logged Out.
    </div>
    <% } %>
    <% if(dataSuccess != null) {%>
        <div class="alert alert-success" role="alert">
            <strong>Thank You!</strong> <%= dataSuccess %>.
        </div>
    <% } %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6" style="margin-top:20px;">

                <span id="message">
            </span>
                <div class="card">
                    <div class="card-header">Student Login</div>
                    <div class="card-body">
                        <form method="POST" id="student_login_form" action="/student/studentLogin">
                            <div class="form-group">
                                <label>Enter email</label>
                                <input type="email" name="studentEmail" id="student_email_address" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Enter password</label>
                                <input type="password" name="password" id="student_password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" name="student_login" id="student_login" class="btn btn-info" value="submit" />
                            </div>
                        </form>
                        <div align="center">
                            <a href="/studentRegister">Register</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-3">

            </div>
        </div>
    </div>
